    .slider&attributes(attributes)
        button.slider__button.swiper-button-prev
            +svg('arrow')
        .swiper
            .swiper-wrapper
                //- Цикл, который рендерит слайды с данными из переменных с приметивными типами
                each url in imgUrls
                    .swiper-slide
                        +img({src: url, alt: 'изображение'})
                        +slideCounter
